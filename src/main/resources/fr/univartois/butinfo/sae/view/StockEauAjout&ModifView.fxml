<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.univartois.butinfo.sae.controller.StockEauAjoutModifController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Catégorie -->
    <Label text="Catégorie :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="categorieComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Quantité -->
    <Label text="Quantité :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="quantiteTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Entrepôt - Code -->
    <Label text="Code Entrepôt :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="codeEntrepotField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Entrepôt - Nom -->
    <Label text="Nom Entrepôt :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="nomEntrepotField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Adresse - Numéro -->
    <Label text="N° Adresse :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="numeroAdresseField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Adresse - Voie -->
    <Label text="Voie :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="voieAdresseField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Commune -->
    <Label text="Code postal :" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="communeCodeField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Nom de la commune :" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="communeNomField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Département :" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="communeDepartementField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <!-- Bouton de validation -->
    <Button text="Valider" onAction="#onValider" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
</GridPane>
