<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="fr.univartois.butinfo.sae.controller.CommandeAjoutModifController"
          hgap="10" vgap="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Client :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="clientComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Stock Eau :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ComboBox fx:id="comboStockEau" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button fx:id="boutonValider" text="Valider" onAction="#onValider"/>
        <Button fx:id="boutonAnnuler" text="Annuler" onAction="#onAnnuler"/>
    </HBox>
</GridPane>
