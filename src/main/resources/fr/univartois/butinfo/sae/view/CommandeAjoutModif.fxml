<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="fr.univartois.butinfo.sae.controller.CommandeAjoutModifController"
          hgap="10" vgap="10"
          stylesheets="@../style/style.css">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- 0. Client -->
    <Label text="Client :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="clientComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- 1. Catégorie d’eau -->
    <Label text="Catégorie :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ComboBox fx:id="categorieComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- 2. Stock (entrepôt) disponible contenant cette catégorie -->
    <Label text="Stock disponible :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ComboBox fx:id="comboStockEau" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="stockDetailsLabel" text="" GridPane.rowIndex="1" GridPane.rowSpan="2" GridPane.columnIndex="3" GridPane.columnSpan="3" minWidth="200"/>

    <!-- 3. Eau pré-enregistrée correspondant à la catégorie -->
    <Label text="Eau choisie :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="eauComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- 4. Quantité souhaitée -->
    <Label text="Quantité :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <TextField fx:id="quantiteField" promptText="Quantité"/>
        <Label fx:id="quantiteMaxLabel" text="(max: ?)"/>
    </HBox>

    <Label fx:id="erreurLabel" text="" textFill="red" wrapText="true" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="3" minWidth="200"/>

    <!-- Boutons -->
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="6" GridPane.columnIndex="1">
        <Button fx:id="boutonValider" text="Valider" onAction="#onValider"/>
        <Button fx:id="boutonAnnuler" text="Annuler" onAction="#onAnnuler"/>
    </HBox>

</GridPane>
